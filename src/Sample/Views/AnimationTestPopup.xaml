<?xml version="1.0" encoding="utf-8" ?>
<fastpopups:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:fastpopups="clr-namespace:FastPopups;assembly=FastPopups"
       xmlns:views="clr-namespace:SampleApp.Views"
       x:Class="SampleApp.Views.AnimationTestPopup"
       x:DataType="views:AnimationTestPopup"
       CloseWhenBackgroundIsClicked="True"
       BackgroundColor="#80000000"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       WidthRequest="500"
       HeightRequest="600">

    <Border BackgroundColor="White"
            StrokeThickness="3"
            Stroke="DodgerBlue"
            Padding="20">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15"/>
        </Border.StrokeShape>

        <ScrollView>
            <VerticalStackLayout Spacing="15">

                <!-- Title -->
                <Label Text="Animation Test"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="DodgerBlue"/>

                <Label Text="Tap outside to close"
                       FontSize="12"
                       HorizontalOptions="Center"
                       TextColor="Gray"
                       Margin="0,0,0,10"/>

                <!-- Animation Info -->
                <Border BackgroundColor="#F0F8FF"
                        Padding="15"
                        StrokeThickness="1"
                        Stroke="LightBlue">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="{Binding AnimationName}"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="DodgerBlue"/>
                        <Label Text="{Binding AnimationDescription}"
                               FontSize="13"
                               TextColor="#333"/>
                        <Label Text="{Binding AnimationDetails}"
                               FontSize="11"
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Close Button -->
                <Button Text="Close Popup"
                        BackgroundColor="DodgerBlue"
                        TextColor="White"
                        Clicked="OnCloseClicked"
                        Margin="0,10,0,0"/>

                <!-- Sample Content -->
                <BoxView HeightRequest="1"
                         Color="LightGray"
                         Margin="0,10"/>

                <Label Text="Sample Content Area"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#666"/>

                <Label Text="This popup demonstrates different animation types. The overlay always fades in/out while the content uses the selected animation."
                       FontSize="12"
                       TextColor="#999"
                       LineBreakMode="WordWrap"/>

                <!-- Visual indicator -->
                <Border BackgroundColor="LightBlue"
                        Padding="20"
                        HorizontalOptions="Center"
                        Margin="0,10">
                    <Border.StrokeShape>
                        <Ellipse/>
                    </Border.StrokeShape>
                    <Label Text="ðŸŽ¨"
                           FontSize="40"
                           HorizontalOptions="Center"/>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Border>

</fastpopups:Popup>
