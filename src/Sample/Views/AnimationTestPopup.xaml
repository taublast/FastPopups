<?xml version="1.0" encoding="utf-8" ?>
<fastpopups:Popup
    x:Class="SampleApp.Views.AnimationTestPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fastpopups="clr-namespace:FastPopups;assembly=FastPopups"
    xmlns:views="clr-namespace:SampleApp.Views"
    x:DataType="views:AnimationTestPopup"
    BackgroundColor="#80000000"
    CloseWhenBackgroundIsClicked="True"
    HeightRequest="600"
    HorizontalOptions="Center"
    VerticalOptions="Center"
    WidthRequest="500">

    <Border
        Padding="20"
        BackgroundColor="White"
        Stroke="DodgerBlue"
        StrokeThickness="3">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="14" />
        </Border.StrokeShape>

        <ScrollView>
            <VerticalStackLayout Spacing="15">

                <!--  Title  -->
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="{Binding AnimationName}"
                    TextColor="Red" />

                <Label
                    Margin="0,0,0,10"
                    FontSize="12"
                    HorizontalOptions="Center"
                    Text="Tap outside to close"
                    TextColor="Gray" />

                <!--  Animation Info  -->
                <Border
                    Padding="15"
                    BackgroundColor="#F0F8FF"
                    Stroke="LightBlue"
                    StrokeThickness="1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontSize="13"
                            Text="{Binding AnimationDescription}"
                            TextColor="DodgerBlue" />
                        <Label
                            FontSize="11"
                            Text="{Binding AnimationDetails}"
                            TextColor="Gray" />
                    </VerticalStackLayout>
                </Border>

                <!--  Close Button  -->
                <Button
                    Margin="0,10,0,0"
                    BackgroundColor="DodgerBlue"
                    Clicked="OnCloseClicked"
                    Text="Close Popup"
                    TextColor="White" />

                <!--  Sample Content  -->
                <BoxView
                    Margin="0,10"
                    HeightRequest="1"
                    Color="LightGray" />

                <Label
                    FontAttributes="Bold"
                    FontSize="14"
                    Text="Sample Content Area"
                    TextColor="#666" />

                <Label
                    FontSize="12"
                    LineBreakMode="WordWrap"
                    Text="This popup demonstrates different animation types. The overlay always fades in/out while the content uses the selected animation."
                    TextColor="#999" />

                <!--  Visual indicator  -->
                <Border
                    Margin="0,10"
                    Padding="20"
                    BackgroundColor="LightBlue"
                    HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <Ellipse />
                    </Border.StrokeShape>
                    <Label
                        FontSize="40"
                        HorizontalOptions="Center"
                        Text="ðŸŽ¨" />
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Border>

</fastpopups:Popup>
