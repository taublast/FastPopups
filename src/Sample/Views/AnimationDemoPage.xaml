<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.Views.AnimationDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Animation Demo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!--  Header  -->
            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="ðŸŽ¬ Animation Demo"
                TextColor="DodgerBlue" />

            <Label
                Margin="0,0,0,20"
                FontSize="14"
                HorizontalOptions="Center"
                Text="Test all popup animations with different settings"
                TextColor="Gray" />

            <!--  Animation Type Selection  -->
            <Border
                Padding="15"
                BackgroundColor="#F0F8FF"
                Stroke="DodgerBlue"
                StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Animation Type"
                        TextColor="DodgerBlue" />

                    <Picker
                        x:Name="AnimationTypePicker"
                        Title="Select Animation Type"
                        SelectedIndexChanged="OnAnimationTypeChanged"
                        TextColor="Red"
                        TitleColor="Black">
                        <Picker.Items>
                            <x:String>Default</x:String>
                            <x:String>None</x:String>
                            <x:String>Fade</x:String>
                            <x:String>SlideFromBottom</x:String>
                            <x:String>SlideFromTop</x:String>
                            <x:String>SlideFromRight</x:String>
                            <x:String>SlideFromLeft</x:String>
                            <x:String>ZoomIn</x:String>
                            <x:String>ZoomOut</x:String>
                            <x:String>WhirlIn</x:String>
                            <x:String>WhirlIn3</x:String>
                            <x:String>Bounce</x:String>
                            <x:String>ElasticSlideUp</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>
            </Border>

            <!--  Duration Setting  -->
            <Border
                Padding="15"
                BackgroundColor="#FFF8F0"
                Stroke="Orange"
                StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="Duration:"
                            TextColor="DarkOrange"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="DurationLabel"
                            FontSize="14"
                            Text="250 ms"
                            TextColor="DarkOrange"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Slider
                        x:Name="DurationSlider"
                        Maximum="5000"
                        Minimum="100"
                        ValueChanged="OnDurationChanged"
                        Value="250" />

                    <Label
                        FontSize="11"
                        Text="Adjust animation duration (100-5000ms)"
                        TextColor="Gray" />
                </VerticalStackLayout>
            </Border>

            <!--  Easing Selection  -->
            <Border
                Padding="15"
                BackgroundColor="#F0FFF0"
                Stroke="SeaGreen"
                StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Easing Curve"
                        TextColor="SeaGreen" />

                    <Picker
                        x:Name="EasingPicker"
                        Title="Select Easing Type"
                        TextColor="Red"
                        TitleColor="Black">

                        <Picker.Items>
                            <x:String>Default</x:String>
                            <x:String>Linear</x:String>
                            <x:String>Decelerate</x:String>
                            <x:String>Accelerate</x:String>
                            <x:String>AccelerateDecelerate</x:String>
                            <x:String>Spring</x:String>
                            <x:String>Elastic</x:String>
                        </Picker.Items>
                    </Picker>
                </VerticalStackLayout>
            </Border>

            <!--  Info Box  -->
            <Border
                Padding="15"
                BackgroundColor="#FFF0F5"
                IsVisible="{Binding SelectedAnimationInfo, Converter={StaticResource IsNotNullConverter}}"
                Stroke="Pink"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        Text="â„¹ï¸ Animation Info"
                        TextColor="#C71585" />
                    <Label
                        x:Name="InfoLabel"
                        FontSize="11"
                        LineBreakMode="WordWrap"
                        Text=""
                        TextColor="#666" />
                </VerticalStackLayout>
            </Border>

            <!--  Action Buttons  -->
            <Button
                Margin="0,10,0,0"
                BackgroundColor="DodgerBlue"
                Clicked="OnShowPopupClicked"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Show Popup with Selected Animation"
                TextColor="White" />

            <Button
                BackgroundColor="MediumPurple"
                Clicked="OnShowAllAnimationsClicked"
                HeightRequest="50"
                Text="Show All Animations (Sequential)"
                TextColor="White" />

            <!--  Notes  -->
            <Border
                Margin="0,20,0,0"
                Padding="15"
                BackgroundColor="#FFFACD"
                Stroke="Gold"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="ðŸ’¡ Notes:"
                        TextColor="#B8860B" />
                    <Label
                        FontSize="11"
                        Text="â€¢ The overlay always fades in/out (hardcoded for UX consistency)"
                        TextColor="#666" />
                    <Label
                        FontSize="11"
                        Text="â€¢ Duration applies to both overlay fade and content animation"
                        TextColor="#666" />
                    <Label
                        FontSize="11"
                        Text="â€¢ Tap outside the popup to close it"
                        TextColor="#666" />
                    <Label
                        FontSize="11"
                        Text="â€¢ WhirlIn3 uses extended duration for dramatic effect"
                        TextColor="#666" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
