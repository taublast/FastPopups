<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.Views.AnimationDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#fefefe"
    Title="Animation Demo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">


            <Label
                Margin="0,0,0,20"
                FontSize="14"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="Test all popup animations with different settings"
                TextColor="DarkGray" />

            <!--  Action Buttons  -->
            <Button
                BackgroundColor="DodgerBlue"
                Clicked="OnShowAllAnimationsClicked"
                FontAttributes="Bold"
                HeightRequest="50"
                Text="Show ALL!"
                TextColor="White" />

            <Button
                BackgroundColor="DodgerBlue"
                Clicked="OnShowPopupClicked"
                HeightRequest="50"
                Text="Show Selected"
                TextColor="White" />


            <!--  Animation Type Selection  -->
            <Border
                Padding="15"
                BackgroundColor="#F0F8FF"
                Stroke="DodgerBlue"
                StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Animation Type"
                        TextColor="DodgerBlue" />

                    <Picker
                        x:Name="AnimationTypePicker"
                        Title="Select Animation Type"
                        SelectedIndexChanged="OnAnimationTypeChanged"
                        TextColor="Red"
                        TitleColor="Black" />
                </VerticalStackLayout>
            </Border>



            <!--  Duration Setting  -->
            <Border
                Padding="15"
                BackgroundColor="#FFF8F0"
                Stroke="Orange"
                StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <HorizontalStackLayout Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="Duration:"
                            TextColor="DarkOrange"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="DurationLabel"
                            FontSize="14"
                            Text="250 ms"
                            TextColor="DarkOrange"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Slider
                        x:Name="DurationSlider"
                        Maximum="5000"
                        Minimum="100"
                        ValueChanged="OnDurationChanged"
                        Value="250" />

                    <Label
                        FontSize="11"
                        Text="Adjust animation duration (100-5000ms)"
                        TextColor="Gray" />
                </VerticalStackLayout>
            </Border>

            <!--  Easing Selection  -->
            <Border
                Padding="15"
                BackgroundColor="#F0FFF0"
                Stroke="SeaGreen"
                StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="Easing Curve"
                        TextColor="SeaGreen" />

                    <Picker
                        x:Name="EasingPicker"
                        Title="Select Easing Type"
                        TextColor="Red"
                        TitleColor="Black" />
                </VerticalStackLayout>
            </Border>

            <!--  Info Box  -->
            <Border
                Padding="15"
                BackgroundColor="#FFF0F5"
                Stroke="Pink"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="5">
                    <Label
                        FontAttributes="Bold"
                        FontSize="12"
                        Text="â„¹ï¸ Animation Info"
                        TextColor="#C71585" />
                    <Label
                        x:Name="InfoLabel"
                        FontSize="11"
                        LineBreakMode="WordWrap"
                        Text=""
                        TextColor="#666" />
                </VerticalStackLayout>
            </Border>



            <!--  Notes  -->
            <Border
                Margin="0,20,0,0"
                Padding="15"
                BackgroundColor="#FFFACD"
                Stroke="Gold"
                StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="8">
                    <Label
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="ðŸ’¡ Notes:"
                        TextColor="#B8860B" />
                    <Label
                        FontSize="11"
                        Text="â€¢ Duration applies to both overlay fade and content animation"
                        TextColor="#666" />
                    <Label
                        FontSize="11"
                        Text="â€¢ Tap outside the popup to close it"
                        TextColor="#666" />
                    <Label
                        FontSize="11"
                        Text="â€¢ WhirlIn3 uses extended duration for dramatic effect"
                        TextColor="#666" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
