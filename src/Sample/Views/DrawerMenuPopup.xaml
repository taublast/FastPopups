                                <Label
                                    FontSize="16"
                                    Text="Home"
                                    TextColor="#212121"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>

                        <BoxView
                            Margin="20,0"
                            HeightRequest="1"
                            Color="#E0E0E0" />

                        <!--  Profile  -->
                        <Grid Padding="20,15" BackgroundColor="Transparent">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMenuItemTapped" />
                            </Grid.GestureRecognizers>
                            <HorizontalStackLayout Spacing="15">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ‘¤"
                                    VerticalOptions="Center" />
                                <Label
                                    FontSize="16"
                                    Text="Profile"
                                    TextColor="#212121"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>

                        <BoxView
                            Margin="20,0"
                            HeightRequest="1"
                            Color="#E0E0E0" />

                        <!--  Settings  -->
                        <Grid Padding="20,15" BackgroundColor="Transparent">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMenuItemTapped" />
                            </Grid.GestureRecognizers>
                            <HorizontalStackLayout Spacing="15">
                                <Label
                                    FontSize="20"
                                    Text="âš™ï¸"
                                    VerticalOptions="Center" />
