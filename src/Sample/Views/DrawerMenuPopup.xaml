                        </Grid>

                    </VerticalStackLayout>
                </ScrollView>

                <!--  Footer  -->
                <BoxView
                    HeightRequest="1"
                    VerticalOptions="End"
                    Color="#E0E0E0" />

            </VerticalStackLayout>

            <Grid
                Padding="20,15"
                BackgroundColor="#F0F0F0"
                VerticalOptions="End">

                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEmptySpaceTapped" />
                </Grid.GestureRecognizers>

                <Label
                    FontSize="12"
                    HorizontalOptions="Center"
                    InputTransparent="True"
                    Text="App Version 1.0.0"
