                                    FontSize="16"
                                    Text="Settings"
                                    TextColor="#212121"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>

                        <BoxView
                            Margin="20,0"
                            HeightRequest="1"
                            Color="#E0E0E0" />

                        <!--  Messages  -->
                        <Grid Padding="20,15" BackgroundColor="Transparent">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMenuItemTapped" />
                            </Grid.GestureRecognizers>
                            <HorizontalStackLayout Spacing="15">
