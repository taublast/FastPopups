<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SampleApp.Views.DrawerMenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Drawer Menu Demo">

    <Grid>
        <!--  Main content  -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource Headline}"
                    Text="Drawer Menu Demo" />

                <Label
                    Margin="0,0,0,20"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Tap the menu button (☰) in the top-left to open the drawer"
                    TextColor="Gray" />

                <Label
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="This demonstrates using a popup as a drawer menu that slides in from the left side."
                    TextColor="Gray" />

                <Label
                    Margin="0,20,0,10"
                    FontAttributes="Bold"
                    Text="Features:" />

                <Label Text="• Slides in from the left" />
                <Label Text="• Aligned to Start (sticks to left edge)" />
                <Label Text="• Uses FromLeft animation" />
                <Label Text="• Custom width for drawer" />
                <Label Text="• Closes when tapping outside" />

            </VerticalStackLayout>
        </ScrollView>

        <!--  Hamburger menu button overlay (top-left) - circular Border  -->
        <Border
            x:Name="MenuButton"
            Margin="15"
            BackgroundColor="#2196F3"
            HeightRequest="50"
            HorizontalOptions="Start"
            Shadow="{Shadow Brush=Black,
                            Opacity=0.3,
                            Radius=10,
                            Offset='2,2'}"
            StrokeThickness="0"
            VerticalOptions="Start"
            WidthRequest="50">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnMenuButtonClicked" />
            </Border.GestureRecognizers>
            <Label
                InputTransparent="True"
                FontSize="26"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                Text="="
                TextColor="White"
                VerticalOptions="Fill"
                VerticalTextAlignment="Center" />
        </Border>
    </Grid>

</ContentPage>
